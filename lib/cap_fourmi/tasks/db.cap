namespace :db do
  desc "Seed the database"
  task :seed do
    on roles(:db) do
      within current_path do
        with rails_env: fetch(:rails_env) do
          execute :rake, 'db:seed'
        end
      end
    end
  end

  desc "Runs rake db:migrate if migrations are set (alias)"
  task :migrate => 'deploy:migrate'
end
